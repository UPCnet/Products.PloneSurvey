<?xml version="1.0"?>
<rolemap>
  <permissions>
    <permission name="PloneSurvey: Add Survey"
                acquire="True">
      <role name="Contributor"/>
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="WebMaster"/>
    </permission>
    <permission name="PloneSurvey: Reset Own Responses"
                acquire="False">
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Reader"/>
      <role name="WebMaster"/>
    </permission>
    <permission name="PloneSurvey: View Survey Results"
                acquire="False">
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="WebMaster"/>
    </permission>

</rolemap>
