<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plonesurvey">

<metal:block fill-slot="css_slot">
    <link rel="Stylesheet" type="text/css" href="" tal:attributes="href string:survey_results.css" />
</metal:block>

<body>
<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
        tal:define="questions here/getAllQuestionsInOrder"
	tal:condition="python:user.has_permission('PloneSurvey: View Survey Results',here)">

        <div metal:use-macro="here/document_actions/macros/document_actions" />
        <h1 i18n:translate="heading_results">Export for survey
            <span i18n:name="title" tal:replace="here/Title" />
        </h1>
    <ul>
     <li><a href="scomponi">Scomponi in dati e tabelle</a> (usa &#167; come separatore)</li>
     <li><a href="scomponi?carattere=&#34;">Scomponi in dati e tabelle</a> (usa " come separatore)</li>
    </ul>
     <h2>Separa le singole tabelle</h2>
      <span tal:omit-tag="" tal:repeat="question questions">
       <div tal:omit-tag="" tal:condition="python:question.portal_type == 'Survey Grid Question'">
       <ul>
       <li><span tal:content="question/Title" /><br />
       <ul tal:define="pv string:;;;
                       mappa python:{'%22':'&#34'+pv,'%C2%A7':'&#167'+pv}">
        <li tal:repeat="sep python:['%22','%C2%A7']">
         <a href=""
            tal:attributes="href string:scomponi_tabella?nome_tabella=${question/id} - ${question/Title}&carattere=${sep}">
            (usa <span tal:replace="structure python:mappa[sep]" /> come separatore)
         </a>
        </li>
       </ul>
       </li>
       </ul>
       </div>
      </span>
   </tal:main-macro>
    <tal:block
        tal:condition="python:not user.has_permission('PloneSurvey: View Survey Results',here)">
        <tal:block replace="here/raiseUnauthorized" />
    </tal:block>
</metal:main>
</body>
</html>
